@model ExercitiuLaborator12.Models.Membership

<h2 class="text-center mt-5">Editare abonament</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <form method="post" asp-action="Edit" asp-controller="Memberships">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu Abonament</label>
                    <br />
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Valoare" class="form-label">Valoare Abonament</label>
                    <br />
                    <input asp-for="Valoare" class="form-control" />
                    <span asp-validation-for="Valoare" class="text-danger"></span>
                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="DataEmitere" class="form-label">Data Emitere</label>
                    <br />
                    <input asp-for="DataEmitere" class="form-control" readonly />
                    <span asp-validation-for="DataEmitere" class="text-danger"></span>
                    <br /><br />
                </div>

                <div class="form-group">
                    <label for="GymId">Selectati sala de sport</label>
                    <br />
                    <select asp-for="GymId" asp-items="Model.Gyms" class="form-control">
                        <option value="">Selectati sala de sport</option>
                    </select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                    <br />
                </div>

                <button class="btn btn-success" type="submit">Salveaza modificarile</button>
            </form>
        </div>
    </div>
</div>
