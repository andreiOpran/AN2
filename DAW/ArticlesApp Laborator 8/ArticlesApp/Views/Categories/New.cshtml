@model ArticlesApp.Models.Category


<h2>Adaugare Categorie</h2>


<form method="post" asp-action="New" asp-controller="Categories">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Denumire categorie</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <br />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
        <br />
    </div>

    <br />
    <button class="btn btn-success" type="submit">Adauga categorie</button>

</form>


