@model ArticlesApp.Models.Category


<h2>@ViewBag.Title</h2>

<form method="post" asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Denumire categorie</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <br />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
        

    </div>
    <br />
    <button class="btn btn-success" type="submit">Modifica categoria</button>

</form>


